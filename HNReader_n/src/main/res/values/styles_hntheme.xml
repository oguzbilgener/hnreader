<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Hntheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_hntheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Hntheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Hntheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Hntheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Hntheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Hntheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_hntheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_hntheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hntheme</item>
        
        
    </style>
    
    <style name="Theme.Hntheme.Overlay" parent="Theme.Hntheme">
        <item name="android:actionBarStyle">@style/ActionBar.Overlay.Hntheme</item>
    </style>

    <style name="ActionBar.Solid.Hntheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_hntheme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_hntheme</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_hntheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hntheme</item>
    </style>

    <style name="ActionBar.Transparent.Hntheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_hntheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hntheme</item>
    </style>
    
    <style name="ActionBar.Overlay.Hntheme" parent="ActionBar.Solid.Hntheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="PopupMenu.Hntheme" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hntheme</item>	
    </style>

    <style name="DropDownListView.Hntheme" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_hntheme</item>
    </style>

    <style name="ActionBarTabStyle.Hntheme" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hntheme</item>
    </style>

    <style name="DropDownNav.Hntheme" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_hntheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hntheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_hntheme</item>
    </style>
    
    <style name="ProgressBar.Hntheme" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <!-- <item name="android:progressDrawable">@drawable/progress_horizontal_hntheme</item> -->
    </style>
    
    <style name="ActionButton.CloseMode.Hntheme" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hntheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hntheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Hntheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Hntheme</item>
    </style>
    
    <style name="SimpleDivider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:background">?android:attr/listDivider</item>
	</style>

	<style name="AboutBlockItem" parent="android:Widget.Holo.Button.Borderless">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/a_block_marginLeft</item>
		<item name="android:layout_marginRight">@dimen/a_block_marginRight</item>
		<item name="android:layout_marginTop">@dimen/a_block_marginTop</item>
		<item name="android:layout_marginBottom">@dimen/a_block_marginBottom</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/a_block_text_size</item>
		<item name="android:textColor">@color/a_block_text</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="AboutBlockDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/a_block_divider_height</item>
		<item name="android:layout_marginLeft">@dimen/a_block_divider_marginLeft</item>
		<item name="android:layout_marginRight">@dimen/a_block_divider_marginRight</item>
		<item name="android:layout_marginTop">@dimen/a_block_divider_marginTop</item>
		<item name="android:layout_marginBottom">@dimen/a_block_divider_marginBottom</item>
		<item name="android:background">@color/a_block_divider</item>
	</style>

</resources>